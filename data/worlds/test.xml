<?xml version="1.0" encoding="UTF-8" ?>
<World>
	<!-- Level Geometry -->
	<Entity>
		<Position x="0" y="0" z="0"/>
		<Rotation x="180" y="90" z="0"/>
		<Scale x="1" y="1" z="1"/>
		<MeshComponent>
			<Model filename="models/common_floor.dae"/>
		</MeshComponent>
		<RigidBodyComponent>
			<Static value="true"/>
		</RigidBodyComponent>
		<BoxShapeComponent>
			<Size x="20" y="1" z="20"/>
		</BoxShapeComponent>
	</Entity>
	
	<!-- Camera AI test -->
	<Entity>
		<Position x="0" y="3" z="0"/>
		<Rotation x="0" y="0" z="0"/>
		<Scale x="1" y="1" z="1"/>
		<MeshComponent>
			<Model filename="models/test_camera.dae"/>
		</MeshComponent>
		<ShockAIComponent>
			<AIType value="ShockAIType_Camera"/>
		</ShockAIComponent>
	</Entity>

	<!-- Test entity with skysphere -->
	<Entity>
		<Position x="0" y="0" z="0"/>
		<Rotation x="0" y="90" z="0"/>
		<Scale x="1000" y="1000" z="1000"/>
		<MeshComponent>
			<Model filename="models/test_sky_half.dae"/>
		</MeshComponent>
	</Entity>
	
	<!-- Test entity with directional light -->
	<Entity>
		<Position x="0" y="0" z="0"/>
		<Rotation x="-90" y="0" z="0"/>
		<Scale x="1" y="1" z="1"/>
		
		<DirectionalLightComponent>
			<AmbientColor r="0.4" g="0.4" b="0.4"/>
			<Color r="1.0" g="1.0" b="1.0"/>
		</DirectionalLightComponent>
	</Entity>
	
	<!-- Player -->
	<Entity>
		<Position x="10" y="1" z="0"/>
		<Rotation x="0" y="0" z="0"/>
		<Scale x="1" y="1" z="1"/>
		
		<ShockPlayerController/>
	</Entity>
</World>